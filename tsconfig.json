{
  "compilerOptions": {
    "target": "ES2020",                  // Set the target to ES2020 or later
    "module": "NodeNext",                  // Use ESNext to output ESM
    "moduleResolution": "NodeNext",          // Use Node module resolution
    "esModuleInterop": true,             // Enable ES module interoperability
    "outDir": "./dist"                   // Output directory for compiled files
  },
  "include": ["src/**/*"],               // Include your source files
  "exclude": ["node_modules"]            // Exclude node_modules
}
